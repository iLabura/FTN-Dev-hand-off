{
  "background": {
    "background-base": {
      "value": "$grey.grey-10",
      "type": "color"
    },
    "gm-background-base": {
      "value": "$grey.grey-30",
      "type": "color"
    },
    "background-progress-bar": {
      "value": "$grey.grey-40",
      "type": "color",
      "description": "To be used on progress-bar backgrounds."
    }
  },
  "surface": {
    "surface-primary": {
      "value": "$grey.grey-20",
      "type": "color"
    },
    "surface-secondary": {
      "value": "$grey.grey-15",
      "type": "color"
    },
    "surface-panel": {
      "value": "$grey.grey-25",
      "type": "color"
    },
    "surface-action-regular": {
      "value": "$grey.grey-30",
      "type": "color"
    },
    "surface-action-regular--hover": {
      "value": "$grey.grey-40",
      "type": "color"
    },
    "gradient": {
      "value": "linear-gradient(0deg, $grey.grey-15 0%, $grey.grey-20 100%);",
      "type": "color"
    },
    "surface-inverted-bw": {
      "value": "$base.black",
      "type": "color"
    },
    "surface-input": {
      "value": "$grey.grey-10",
      "type": "color"
    },
    "surface-input-error": {
      "value": "$red.red-10",
      "type": "color",
      "$extensions": {
        "studio.tokens": {
          "modify": {
            "type": "darken",
            "value": "0.7",
            "space": "lch"
          }
        }
      }
    },
    "surface-input-text-inactive": {
      "value": "$grey.grey-15",
      "type": "color"
    },
    "surface-nav": {
      "value": "$grey.grey-10",
      "type": "color"
    }
  },
  "content": {
    "content-primary": {
      "value": "$base.white",
      "type": "color"
    },
    "content-secondary": {
      "value": "$grey.grey-80",
      "type": "color"
    },
    "content-tertiary": {
      "value": "$grey.grey-70",
      "type": "color"
    },
    "content-on-content-primary": {
      "value": "$base.white",
      "type": "color"
    },
    "content-form-label-text": {
      "value": "$base.white",
      "type": "color"
    },
    "content-primary-inverted": {
      "value": "$base.black",
      "type": "color"
    },
    "content-perma-black": {
      "value": "$base.black",
      "type": "color"
    },
    "content-perma-white": {
      "value": "$base.white",
      "type": "color"
    },
    "content-disabled": {
      "value": "$grey.grey-50",
      "type": "color"
    },
    "content-error": {
      "value": "{red.red-90}",
      "type": "color"
    },
    "content-placeholder": {
      "value": "{grey.grey-40}",
      "type": "color"
    }
  },
  "border": {
    "border-primary": {
      "value": "$grey.grey-10",
      "type": "color"
    },
    "border-secondary": {
      "value": "$grey.grey-15",
      "type": "color"
    },
    "border-tertiary": {
      "value": "$grey.grey-20",
      "type": "color"
    },
    "gm-border-base": {
      "value": "$grey.grey-20",
      "type": "color"
    },
    "border-btn-disabled": {
      "value": "$grey.grey-70",
      "type": "color"
    },
    "border-input": {
      "value": "$grey.grey-40",
      "type": "color"
    }
  },
  "overlay": {
    "overlay-scrim": {
      "value": "rgba($base.black, $opacity-scrim)",
      "type": "color"
    },
    "overlay-gradient": {
      "value": "linear-gradient (0deg, rgba({base.black} , 0.4) 0%, rgba({base.black} , 0) 100%)",
      "type": "color"
    },
    "overlay-gradient-primary-on-avatar-edit": {
      "value": "linear-gradient (0deg, rgba({surface.surface-primary}, 0.7) 0%, rgba({surface.surface-primary}, 1) 100%)",
      "type": "color"
    },
    "overlay-navigation": {
      "value": "rgba({surface.surface-primary} , 0.8)",
      "type": "color"
    },
    "overlay-tooltip-default": {
      "value": "rgba( {grey.grey-30} , 0.8)",
      "type": "color"
    },
    "overlay-error": {
      "value": "rgba( {meaning.negative} , 0.8)",
      "type": "color"
    },
    "overlay-info": {
      "value": "rgba( {meaning.info} , 0.8)",
      "type": "color"
    },
    "overlay-positive": {
      "value": "rgba( {meaning.positive} , 0.8)",
      "type": "color"
    }
  },
  "odd-button": {
    "odd-button-default": {
      "value": "{base.white}",
      "type": "color",
      "$extensions": {
        "studio.tokens": {
          "modify": {
            "type": "alpha",
            "value": "0.1",
            "space": "lch"
          }
        }
      }
    },
    "odd-button-hover": {
      "value": "{base.white}",
      "type": "color",
      "$extensions": {
        "studio.tokens": {
          "modify": {
            "type": "alpha",
            "value": "0.15",
            "space": "lch"
          }
        }
      }
    },
    "odd-button-disabled": {
      "value": "{base.white}",
      "type": "color",
      "$extensions": {
        "studio.tokens": {
          "modify": {
            "type": "alpha",
            "value": "0",
            "space": "lch"
          }
        }
      }
    }
  },
  "feedback": {
    "tooltip": {
      "default": {
        "value": {
          "fill": "{overlay.overlay-tooltip-default}",
          "backgroundBlur": "8",
          "borderRadius": "{radius-small}",
          "boxShadow": "{outer.shadow-outer-large}",
          "verticalPadding": "{space-xsmall}",
          "horizontalPadding": "{space-mezzo-6}"
        },
        "type": "composition"
      },
      "error": {
        "value": {
          "fill": "{overlay.overlay-error}",
          "backgroundBlur": "8",
          "borderRadius": "{radius-small}",
          "boxShadow": "{outer.shadow-outer-large}"
        },
        "type": "composition"
      },
      "info": {
        "value": {
          "fill": "{overlay.overlay-info}",
          "backgroundBlur": "8",
          "borderRadius": "{radius-small}",
          "boxShadow": "{outer.shadow-outer-large}"
        },
        "type": "composition"
      }
    },
    "snackbar": {
      "alert": {
        "value": {
          "fill": "{overlay.overlay-error}",
          "horizontalPadding": "{space-large}",
          "verticalPadding": "{space-mezzo-12}",
          "borderRadius": "{radius-medium}",
          "boxShadow": "{outer.shadow-outer-large}",
          "backgroundBlur": "12"
        },
        "type": "composition"
      },
      "info": {
        "value": {
          "fill": "{overlay.overlay-info}",
          "horizontalPadding": "{space-large}",
          "verticalPadding": "{space-mezzo-12}",
          "borderRadius": "{radius-medium}",
          "boxShadow": "{outer.shadow-outer-large}",
          "backgroundBlur": "12"
        },
        "type": "composition"
      },
      "positive": {
        "value": {
          "fill": "{overlay.overlay-positive}",
          "horizontalPadding": "{space-large}",
          "verticalPadding": "{space-mezzo-12}",
          "borderRadius": "{radius-medium}",
          "boxShadow": "{outer.shadow-outer-large}",
          "backgroundBlur": "12"
        },
        "type": "composition"
      }
    }
  },
  "special-surface": {
    "navigation-bar": {
      "value": {
        "fill": "{overlay.overlay-navigation}",
        "backgroundBlur": "8"
      },
      "type": "composition"
    },
    "glass-gradient-primary-on-avatar-edit": {
      "value": {
        "fill": "{overlay.overlay-gradient-primary-on-avatar-edit}",
        "backgroundBlur": "10"
      },
      "type": "composition"
    }
  }
}